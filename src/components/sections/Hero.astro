---
import Location from '../icons/Location.astro';
import Github from '../icons/Github.astro';
import Linkedin from '../icons/Linkedin.astro';
import type { languages } from '../../i18n/ui';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import SanValenMemoji from '../../assets/san_valen_memoji.webp';

const cvLangMap = {
  'es': 'https://drive.google.com/file/d/1gAiy4ZsFAzBXUCADKHnB6ykiqMKHwqNc/view?usp=sharing',
  'en': 'https://drive.google.com/file/d/1hGeatZeKWrlqzbT_YOv2TuRxxykHrPqm/view?usp=sharing',
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang as keyof typeof languages)
const curriculumLink = cvLangMap[lang as keyof typeof cvLangMap];
---

<section class="bg-white dark:bg-gray-900 pt-14 hero-section">
  <div class="mx-auto max-w-screen-xl py-8 px-4 sm:pt-36 flex flex-col md:flex-row">
    <div class="w-full md:w-7/12 order-2 md:order-1 flex flex-col">
      <h1 class="text-center self-center md:self-start md:text-left mb-4 text-4xl font-extrabold tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white typewriter max-w-fit">{t('hero.title')}.</h1>
      <p class="text-center md:text-left mb-6 text-2xl text-gray-500 lg:text-xl dark:text-gray-400 md:max-w-[95%]">
        <span class="font-bold">{t('hero.experience')}.</span>
        <span class="text-yellow-700 dark:text-yellow-500">{t('hero.role')}.</span>
        <span>{t('hero.description')}</span>
      </p>
      <div class="flex flex-col justify-start md:flex-row space-y-0 text-right gap-3 mb-6">
        <a href={curriculumLink} target="_blank" class="inline-flex justify-center items-center py-3 px-8 md:px-16 text-base font-medium text-center text-white rounded-2xl bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">
            {t('hero.actions.view_cv')}
            <svg class="w-4 h-4 ms-2 text-white dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H8m12 0-4 4m4-4-4-4M9 4H7a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h2"/>
            </svg>
        </a>
        <a href="#contact" class="inline-flex justify-center items-center py-3 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-2xl border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-900 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
            {t('hero.actions.contact_me')}
            <svg class="w-3.5 h-3.5 ms-2 rotate-90" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        </a>
      </div>
      <div class="flex flex-row gap-2 md:items-start items-center md:justify-start justify-center text-gray-500 dark:text-gray-400 mb-6 text-right">
        <Location currentColor="gray" />
        <span>Medell√≠n, Colombia</span>
      </div>
      <div class="flex flex-row md:items-start items-center md:justify-start justify-center gap-6 text-gray-500 dark:text-gray-400 text-right">
        <a href="https://github.com/Diegovalen47" target="_blank" class="social-link text-black dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm p-1.5 text-center inline-flex items-center gap-1 dark:border-blue-500 dark:focus:ring-blue-800 hover:bg-gray-100 dark:hover:bg-gray-700">
          <Github currentColor="gray" />
          <span class="social-name hidden group-hover:inline-block transition-all duration-300">Github</span>
        </a>
        <a href="https://www.linkedin.com/in/valentin-osorio/" target="_blank" class="social-link text-black dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm p-1.5 text-center inline-flex items-center gap-1 dark:border-blue-500 dark:focus:ring-blue-800 hover:bg-gray-100 dark:hover:bg-gray-700">
          <Linkedin currentColor="gray" />
          <span class="social-name hidden group-hover:inline-block transition-all duration-300">LinkedIn</span>
        </a>
      </div>
    </div>
    <img src={SanValenMemoji.src} alt="Valentin Osorio" class="mx-auto mb-4 md:mb-0 order-1 md:order-2 md:w-[330px] w-[150px] h-auto object-contain" />
  </div>
  <div class="py-8 px-8 mx-auto max-w-screen-xl flex justify-center">
    <a href="#experience" class="inline-flex justify-center items-center py-3 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-2xl hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-900 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 animate-bounce hover:animate-none transition-all duration-300">
      <svg class="w-16 h-16 text-gray-800 dark:text-white animate-pulse" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 9-7 7-7-7"/>
      </svg>
    </a>
  </div>
</section>

<style>
  .hero-section {
    min-height: min(100vh, 870px);
  }

  .typewriter {
    overflow: hidden;
    border-right: .15em solid transparent;
    white-space: nowrap;
    animation: typing 3.5s steps(40, end), blink-caret .75s step-end infinite;
    line-height: 1.2;
  }

  @keyframes typing {
    from { width: 0 }
    to { width: 100% }
  }

  @keyframes blink-caret {
    from, to { border-color: transparent }
    50% { border-color: #2563eb }
  }
  
  /* Estilos para los enlaces sociales */
  .social-link {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.75rem;
    border-radius: 9999px;
    transition: all 0.3s ease;
  }
  
  .social-link:hover .social-name {
    display: inline-block;
    opacity: 1;
    transform: translateX(0);
    margin-left: 0.5rem;
  }
  
  .social-name {
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
    display: none;
  }
  
  .social-link:hover {
    padding-right: 1.5rem;
  }
</style>
