<style>
  .hero-section {
    min-height: min(100vh, 870px);
    position: relative;
  }

  .blurred-div {
    backdrop-filter: blur(10px);
    background-color: rgba(255, 255, 255, 0.7);
  }

  .typewriter {
    overflow: hidden;
    border-right: .15em solid transparent;
    white-space: nowrap;
    animation: typing 2.5s steps(40, end), blink-caret .75s step-end infinite;
    line-height: 1.2;
  }

  @keyframes typing {
    from { width: 0 }
    to { width: 100% }
  }

  @keyframes blink-caret {
    from, to { border-color: transparent }
    50% { border-color: #c27803}
  }
  
  /* Estilos para los enlaces sociales */
  .social-link {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.75rem;
    border-radius: 9999px;
    transition: all 0.3s ease;
  }
  
  .social-link:hover .social-name {
    display: inline-block;
    opacity: 1;
    transform: translateX(0);
    margin-left: 0.5rem;
  }
  
  .social-name {
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
    display: none;
  }
  
  .social-link:hover {
    padding-right: 1.5rem;
  }

  /* Animaciones de fade-in para los elementos secuenciales */
  .fade-in-element {
    opacity: 0;
    transform: translateY(20px);
    animation: fade-in 1s ease forwards;
  }

  .animation-delay-1 {
    animation-delay: 2s;
  }

  .animation-delay-2 {
    animation-delay: 2.5s;
  }

  .animation-delay-3 {
    animation-delay: 3s;
  }

  .animation-delay-4 {
    animation-delay: 3.5s;
  }

  .animation-delay-5 {
    animation-delay: 4s;
  }

  .animation-delay-6 {
    animation-delay: 4.5s;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
