---
import type { languages } from "../i18n/ui";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import EnFlag from "./icons/EnFlag.astro";
import EsFlag from "./icons/EsFlag.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang as keyof typeof languages)
---

<button type="button" data-dropdown-toggle="language-dropdown-menu" class="transition-all duration-300 inline-flex items-center font-medium justify-center px-4 py-2 text-sm text-gray-900 dark:text-white rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-700 dark:hover:text-white">
  {lang === 'en' ? <EnFlag /> : <EsFlag />}
  {lang === 'en' ? 'English (EN)' : 'Español (ES)'}
</button>
<!-- Dropdown -->
<div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700" id="language-dropdown-menu">
  <ul class="py-2 font-medium" role="none">
    <li>
      <a href="/en/" class="transition-all duration-300 block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white" role="menuitem">
        <div class="inline-flex items-center">
          <EnFlag />
          English (EN)
        </div>
      </a>
    </li>
    <li>
      <a href="/es/" class="transition-all duration-300 block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white" role="menuitem">
        <div class="inline-flex items-center">
          <EsFlag />
          Español (ES)
        </div>
      </a>
    </li>
  </ul>
</div>